@using GameStore.Services
@inject CurrentUserService CurrentUser
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/home">GameStore</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="add-game">
                <span class="bi bi-controller-nav-menu" aria-hidden="true"></span> Add Game
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@ViewAccountHref">
                <span class="bi bi-person-circle" aria-hidden="true"></span> View Account
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string ViewAccountHref => CurrentUser.AccountId != null ? $"/view-account?accountId={CurrentUser.AccountId}" : "/view-account";

    protected override void OnInitialized()
    {
        CurrentUser.OnChange += CurrentUser_OnChange;
    }

    private void CurrentUser_OnChange() => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        CurrentUser.OnChange -= CurrentUser_OnChange;
    }
}

