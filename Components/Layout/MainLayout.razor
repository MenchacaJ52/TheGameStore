@inherits LayoutComponentBase
@using System
@using GameStore.Services
@inject NavigationManager NavigationManager
@inject CurrentUserService CurrentUser
@inject GameStore.Data.ApplicationDbContext Db
@implements IDisposable

<div class="page">
    @if (ShowSidebar)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            @if (!string.IsNullOrEmpty(WelcomeName))
            {
                <div class="ms-auto me-2">Welcome @WelcomeName</div>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool ShowSidebar = true;
    private string? WelcomeName;

    protected override async Task OnInitializedAsync()
    {
        // Load persisted current user from session storage
        await CurrentUser.InitializeAsync();

        UpdateSidebar();
        NavigationManager.LocationChanged += OnLocationChanged;
        CurrentUser.OnChange += CurrentUser_OnChange;
        await UpdateWelcomeAsync();
    }

    private async void CurrentUser_OnChange()
    {
        await UpdateWelcomeAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task UpdateWelcomeAsync()
    {
        if (CurrentUser.AccountId != null)
        {
            var acc = await Db.Accounts.FindAsync(CurrentUser.AccountId.Value);
            WelcomeName = acc != null ? acc.FirstName : null;
        }
        else
        {
            WelcomeName = null;
        }
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        UpdateSidebar();
        InvokeAsync(StateHasChanged);
    }

    private void UpdateSidebar()
    {
        var relative = NavigationManager.ToBaseRelativePath(NavigationManager.Uri).TrimEnd('/').ToLowerInvariant();
        // hide sidebar on the login page (root -> empty string) and on create-account
        if (string.IsNullOrEmpty(relative) || relative == "create-account")
        {
            ShowSidebar = false;
        }
        else
        {
            ShowSidebar = true;
        }
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        CurrentUser.OnChange -= CurrentUser_OnChange;
    }
}
